                android:text=""
                android:textSize="17sp" />
        </TableRow>

        <!-- 第四行數據 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D0D0D0"
                android:gravity="center"
                android:padding="3dp"
                android:text="第四次"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvFourthDepth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D0D0D0"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvFourthFrequency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D0D0D0"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvFourthLeft"
                android:layout_width="0dp"
