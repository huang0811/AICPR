                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvFifthRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ADADAD"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />
        </TableRow>

        <!-- 是否合格行 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text="是否合格"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIsPassDepth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvIsPassFrequency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvIsPassLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvIsPassRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textSize="17sp" />
        </TableRow>
    </TableLayout>

    <!-- 按钮区域 -->
    <GridLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:columnCount="2"
        android:gravity="center"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableLayout">

        <ImageButton
            android:id="@+id/btnReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="@string/btn_report"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_report" />

        <ImageButton
            android:id="@+id/btnRestart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="@string/btn_restart"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_restart" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="@string/btn_history"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_history" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="@string/btn_home"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>