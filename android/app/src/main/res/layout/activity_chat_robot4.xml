<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_robot2"
    tools:context=".chat_robot4">

    <!-- 返回按鈕 -->
    <ImageButton
        android:id="@+id/ibchatback"
        android:layout_width="68dp"
        android:layout_height="34dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ripple_effect"
        android:contentDescription="@string/btn_home"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_chat_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 聊天訊息的 RecyclerView -->

    <!-- 選項按鈕區域 -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView1"
        android:layout_width="359dp"
        android:layout_height="278dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@id/choiceLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibchatback"
        app:layout_constraintVertical_bias="0.991" />

    <LinearLayout
        android:id="@+id/choiceLayout"
        android:layout_width="423dp"
        android:layout_height="274dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/choiceButton4"
            android:layout_width="374dp"
            android:layout_height="68dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#c1b7af"
            android:contentDescription="選項4"
            android:gravity="center"
            android:text="剛剛按壓好辛苦呀"
            android:textColor="#6d6864" />

        <Button
            android:id="@+id/choiceButton5"
            android:layout_width="374dp"
            android:layout_height="68dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#c1b7af"
            android:contentDescription="選項5"
            android:gravity="center"
            android:text="終於結束了"
            android:textColor="#6d6864" />

        <Button
            android:id="@+id/choiceButton6"
            android:layout_width="374dp"
            android:layout_height="68dp"
            android:backgroundTint="#c1b7af"
            android:contentDescription="選項6"
            android:gravity="center"
            android:text="剛剛我做的如何?"
            android:textColor="#6d6864" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
