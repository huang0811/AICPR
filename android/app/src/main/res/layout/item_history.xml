<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/historyBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_btnback"
        app:layout_constraintDimensionRatio="4:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"/>

    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:fontFamily="@font/joystix_monospace"
        android:gravity="start"
        android:text="2024"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/historyBackground"
        app:layout_constraintStart_toStartOf="@id/historyBackground"
        app:layout_constraintTop_toTopOf="@id/historyBackground" />

    <TextView
        android:id="@+id/historyResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yujiboku_regular"
        android:gravity="end"
        android:shadowColor="#ffffff"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="合格"
        android:textColor="#1279c6"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/historyBackground"
        app:layout_constraintEnd_toEndOf="@id/historyBackground"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toEndOf="@id/historyDate"
        app:layout_constraintTop_toTopOf="@id/historyBackground" />
</androidx.constraintlayout.widget.ConstraintLayout>
