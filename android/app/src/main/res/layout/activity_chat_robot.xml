<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_robot1"
    tools:context=".chat_robot">

        <!-- 用於顯示介紹內容的 TextView -->

        <!-- 加載時顯示的進度條 -->

        <TextView
            android:id="@+id/tv_response"
            android:layout_width="184dp"
            android:layout_height="107dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="點擊下一步開始"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ibBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.735"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.356" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_response"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <!-- 返回主頁的按鈕 -->
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="167dp"
            android:layout_height="50dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@string/btn_home"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 用於進行下一步的按鈕 -->
        <ImageButton
            android:id="@+id/ibnext"
            android:layout_width="167dp"
            android:layout_height="50dp"
            android:layout_marginBottom="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.976"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
