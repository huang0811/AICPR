<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按钮按下时的背景 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#5E35B1"/> <!-- 按下时的颜色 -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- 默认按钮背景 -->
    <item>
        <shape>
            <gradient android:startColor="#7C4DFF" android:endColor="#6200EA" android:angle="270"/> <!-- 渐变色 -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
